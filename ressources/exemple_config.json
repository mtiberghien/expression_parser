{
    "target":"arduino",
    "devices":[
        {
            "id":"presence_1",
            "type":"HCSR501",
            "config":
            {
                "pin":15
            },
            "inputs":["value"]
        },
        {
            "id":"lampe_1",
            "type":"led",
            "config":
            {
                "pin":12
            },
            "outputs":["value"]          
        }
    ],
    "behaviors":[
        {
            "if":"${presence_1.value} > 0",
            "then": ["${lampe_1.value} = 255"],
            "else": ["${lampe_1.value} = 0"]
        }
    ]
}